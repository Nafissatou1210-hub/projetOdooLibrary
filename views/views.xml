<odoo>
  <record id="view_form_library" model="ir.ui.view">
    <field name="name">Vue formulaire Library</field>
    <field name="model">uadb.library</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <field name="date_pub" />
          <field name="num_isbn" />
          <field name="auteur" widget="many2many_tags" />
        </group>
      </form>
    </field>
  </record>
  
  <record id="view_list_library" model="ir.ui.view">
    <field name="name">Vue Liste Bibliothèque</field>
    <field name="model">uadb.library</field>
    <field name="arch" type="xml">
      <tree>
        <field name="num_isbn" />
        <field name="date_pub" />
        <field name="auteur" widget="many2many_tags" />
      </tree>
    </field>
  </record>

  <record id="view_kanban_library" model="ir.ui.view">
    <field name="name">Vue Kanban Bibliothèque</field>
    <field name="model">uadb.library</field>
    <field name="arch" type="xml">
      <kanban>
        <field name="num_isbn" />
        <field name="date_pub" />
        <field name="auteur" widget="many2many_tags" />
        <templates>
          <t t-name="kanban-box">
            <ul class="list-group">
              <li class="list-group-item">Date: <field name="date_pub"/></li>
              <li class="list-group-item">Numero ISBN: <field name="num_isbn"/></li>
            </ul>
            <!-- <div t-if="record.num_isbn.value">
              <t t-esc="record.num_isbn.value"/>
            </div> -->
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <record id="vue_form_library_action" model="ir.actions.act_window">
    <field name="name">Voir la liste</field>
    <field name="res_model">uadb.library</field>
    <field name="view_mode">tree,form,kanban</field>
  </record>

  <menuitem id="menu_library" name="Formulaire BU" action ="vue_form_library_action" />

</odoo>